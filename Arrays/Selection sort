{   
    for(int i = 0; i < n-1; i++){
        int mini = i;
        for(int j = i+1; j < n; j++){
            if(arr[mini] > arr[j]){
                mini = j;
            }
        }
        // Swap the found minimum element with the first element
        if(mini != i) {
            swap(arr[i], arr[mini]);
        }
    }
}
