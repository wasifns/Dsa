

//solution

class Solution {
public:
    bool isPalindrome(int x) {
        if(x < 0){
            return false;
        }
        std:: string palin;
        std::string str = std::to_string(x);
        for(int i=str.length() -1; i>=0; i--){
            palin.push_back(str[i]);
        }
        if(palin==str){
            return true;
        }
        else 
            return false;
        
        
    }
};
